{% extends 'base.html.twig' %}

{% block title %}Data Vault - Secure Document Storage{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Secure Document Storage for Everyone</h1>
                <p class="lead mb-4">Store, organize, and access your important documents from anywhere. Data Vault provides the security and reliability you need for your sensitive files.</p>
                <div class="d-flex gap-3">
                    {% if app.user %}
                        <a href="{{ path('app_document_index') }}" class="btn btn-light btn-lg px-4">
                            <i class="fas fa-folder-open me-2"></i> My Documents
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-light btn-lg px-4">
                            <i class="fas fa-sign-in-alt me-2"></i> Log In
                        </a>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-lg px-4">
                            <i class="fas fa-user-plus me-2"></i> Sign Up
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="{{ asset('uploads/documents/ChatGPT Image 4 juin 2025, 20_57_45.png') }}" alt="Secure Document Storage" class="img-fluid rounded shadow-lg">
