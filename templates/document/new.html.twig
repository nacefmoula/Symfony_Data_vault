{% extends 'base.html.twig' %}

{% block title %}Upload New Document{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 fw-bold">Upload New Document</h1>
            </div>

            <div class="row mb-4">
                <div class="col-md-8">
                    {{ include('document/_form.html.twig') }}
                </div>

                <div class="col-md-4 d-none d-md-block">
                    <div class="card border-0 bg-light h-100">
                        <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                            <i class="fas fa-cloud-upload-alt fa-5x text-primary mb-4"></i>
                            <h3 class="h5 mb-3">Secure Document Storage</h3>
                            <p class="text-muted">Upload and organize your important documents in one secure location.</p>
                            <hr class="w-25 my-3">
                            <ul class="list-unstyled text-start">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Private access</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Easy organization</li>
                                <li><i class="fas fa-check text-success me-2"></i> Secure storage</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
